{
  "compilerOptions": {
    "module": "esnext",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "noErrorTruncation": true,
    "downlevelIteration": true,
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext", "dom", "dom.iterable"]
  },
  "include": ["app/**/*"],
  "exclude": [
    "node_modules"
    // "**/*.spec.ts",
  ]
}
