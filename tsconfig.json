{
  "compilerOptions": {
    "module": "esnext",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "noErrorTruncation": true,
    "downlevelIteration": true,
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext", "dom", "dom.iterable"],
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false // due to ledger types
  },
  "include": ["src/**/*", "declaration.d.ts"]
}
