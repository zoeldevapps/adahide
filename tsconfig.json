{
  "compilerOptions": {
    "module": "CommonJS",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": ".",
    "paths": {
      "preact": ["app/node_modules/preact/dist/preact.d.ts"]
    },
    "noErrorTruncation": true,
    "downlevelIteration": true,
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext",
      "dom"
    ]
  },
  "include": ["app/**/*"],
  "exclude": [
    "node_modules"
    // "**/*.spec.ts",
  ]
}
