# IP blacklist as comma separated list
ADAHIDE_IP_BLACKLIST = 8.8.8.8, 9.9.9.9

#sentry
ADAHIDE_SENTRY_DSN=

# adalite stake pool
ADAHIDE_STAKE_POOL_ID="04c60c78417132a195cbb74975346462410f72612952a7c4ade7e438"
