# mock server config
ADAHIDE_ENABLE_SERVER_MOCKING_MODE=false
ADAHIDE_MOCK_TX_SUBMISSION_SUCCESS=false
ADAHIDE_MOCK_TX_SUMMARY_SUCCESS=false
